<?xml version="1.0"?>
<config>
    <modules>
        <CustomGento_CoreImprovements>
            <version>1.0.0</version>
        </CustomGento_CoreImprovements>
    </modules>
    <global>
        <models>
            <customgento_coreimprovements>
                <class>CustomGento_CoreImprovements_Model</class>
            </customgento_coreimprovements>
        </models>
    </global>
    <frontend>
        <events>
            <catalog_block_product_list_collection>
                <observers>
                    <configurableswatches>
                        <class>customgento_coreimprovements/configurableSwatches_observer</class>
                        <method>productListCollectionLoadAfter</method>
                    </configurableswatches>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>
</config>
